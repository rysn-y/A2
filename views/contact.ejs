<body class="d-flex flex-column" >

    <!-- navv menu -->
    <header class="text-center py-3">
        
                <a href="/contact" class="font-weight-bold text-dark mx-3">Contact</a>
                <a href="/about" class="font-weight-bold mx-3">About Me</a>
                <a href="/projects" class="font-weight-bold mx-3">Projects</a>
                <a href="/" class="font-weight-bold mx-3">Home</a>
            </nav>
    
    </header>

    <div class="container bg-primary text-white p-4 rounded mt-4" style="max-width: 75%;">
        <form>
            <!--name label and text field-->
            <div class="form-group">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" required>
            </div>
            <!--email label and text field-->
            <div class="form-group">                                                 <!--"pattern="[a-z0-9._%+\-]+@[a-z0-9.\-]+\.[a-z]{2,}$"-->
                <label for="mail" class="form-label">Email</label>                   <!--pattern requirement obtaine from "https://www.w3schools.com/tags/att_input_pattern.asp"-->
                <input type="email" class="form-control" id="mail" required pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$" title="Enter a valid email address">
            </div>
            <!--message label and text field-->
            <div class="form-group">
                <label for="msg" class="form-label">Message</label>
                <textarea class="form-control" id="msg" rows="5" required></textarea>
            </div>
            <!-- submit button -->
            <div class="text-center">
                <button type="submit" class="btn btn-warning">Submit</button>
            </div>
        </form>
    </div>

